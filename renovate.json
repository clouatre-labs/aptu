{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:best-practices"],
  "labels": ["dependencies"],
  "platformAutomerge": true,
  "ignorePaths": ["fuzz/**"],
  "packageRules": [
    {
      "matchUpdateTypes": ["patch", "minor", "digest", "pin"],
      "automerge": true
    },
    {
      "matchManagers": ["github-actions"],
      "automerge": true
    }
  ]
}
